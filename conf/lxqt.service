[Unit]
Description=Start LXQt on Xvfb
Requires=xvfb.service
After=xvfb.service network.target

[Service]
Type=simple
User=agentsea
Environment="DISPLAY=:99" "XAUTHORITY=/home/agentsea/.Xauthority"
ExecStartPre=/usr/bin/openbox --config-file /home/agentsea/.config/openbox/rc.xml
ExecStart=/usr/bin/lxqt-session
Restart=on-failure
RestartSec=5

[Install]
WantedBy=multi-user.target